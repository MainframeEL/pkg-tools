#!/bin/sh

NAME="$1"
BRANCH="$2"
ARCH=`uname -m`
MOCKCFG="/etc/mock/sunos-$ARCH.cfg"

shift
shift

if [ -z "$NAME" ]; then
    echo "USAGE: $0 [PACKAGE NAME] [BRANCH] <MODULE NAME>..."
    exit 1
fi


# SANITY
if [ ! -d "${HOME}/sun/rpms/${NAME}" ]; then
    echo "ERROR: package name is not imported"
    exit 1
fi
if [ -z "$BRANCH" ]; then
    BRANCHES=`ls -1 ${HOME}/sun/rpms/${NAME} | wc -l`
    if [ "$BRANCHES" -eq 1 ]; then
        BRANCH=`( cd ${HOME}/sun/rpms/${NAME}/ ; ls -d *)`
    else
        echo "ERROR: What branch do you want to build:"
        ( cd $HOME/sun/rpms/${NAME}; ls -1 )
        exit 1
    fi
fi
if [ ! -d "${HOME}/sun/rpms/${NAME}/${BRANCH}" ]; then
    echo "This package branch does not exist."
    exit 255
fi


# MODULARITY
TMPCFG=`mktemp /tmp/sunbuild-mock-XXXXXXX.cfg`
cat "$MOCKCFG" > "$TMPCFG"

if [ -n "$1" ]; then
    FILES=`for MODULE in $@; do
        if [ -f "/etc/sun/devtools/modulefiles/$MODULE" ]; then
            echo -n "/etc/sun/devtools/modulefiles/$MODULE "
            echo "Including Module: $MODULE" >&2
        else
            echo "WARNING: Could not find module config for: $MODULE" >&2
        fi
    done`

    rockymockgen $FILES >> "$TMPCFG"
    sleep 3
else
    STREAM=`echo $BRANCH | sed -e 's/r8-stream-//'`
    FILES=`grep "^$NAME " /etc/sun/devtools/modulelist | while read name module stream; do
        if [ "$STREAM" == "$stream" ]; then
            if [ -f "/etc/sun/devtools/modulefiles/$module:$stream" ]; then
                echo -n "/etc/sun/devtools/modulefiles/$module:$stream "
                echo "Including Module: $module:$stream" >&2
            else
                echo "WARNING: Could not find module config for: $module:$stream" >&2
            fi
        fi
    done`

    sunmockgen $FILES >> "$TMPCFG"

    sleep 3
fi

echo "MOCKCFG=$TMPCFG"

test -d "${HOME}/sun/builds/${NAME}/${BRANCH}" || mkdir -p "${HOME}/sun/builds/${NAME}/${BRANCH}"

set -e

createrepo /usr/share/nginx/html/repo

rpmbuild -bs --nodeps --define "%_topdir ${HOME}/sun/rpms/${NAME}/${BRANCH}" --define "dist .el8.sol" ${HOME}/sun/rpms/${NAME}/${BRANCH}/SPECS/*.spec

mock -r "$TMPCFG" --resultdir="${HOME}/sun/builds/${NAME}/${BRANCH}" ${HOME}/sun/rpms/${NAME}/${BRANCH}/SRPMS/*.src.rpm --isolation=simple --cleanup-after ${MOCKARGS:-}

cp ${HOME}/sun/builds/${NAME}/${BRANCH}/*.rpm ${HOME}/sun/rpms/${NAME}/${BRANCH}/SRPMS/*.src.rpm /usr/share/nginx/html/repo/

createrepo /usr/share/nginx/html/repo

if [ -n "$TMPCFG" ]; then
    rm "$TMPCFG"
fi
